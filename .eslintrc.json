{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "require-atomic-updates": "off",
        "no-console": "off",
        "no-trailing-spaces": "error",
        "no-throw-literal": "off",
        "valid-jsdoc": "off"
    },
    "globals": {
        "describe": false,
        "mocha": false,
        "it": false,
        "expect": false,
        "chai": false,
        "process": false,
        "beforeEach": false
    }
}